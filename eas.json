{
  "cli": {
    "version": ">= 16.10.0",
    "appVersionSource": "remote"
  },

  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": { "APP_VARIANT": "development" }
    },
    "ios-simulator": {
      "extends": "development",
      "ios": { "simulator": true }
    },
    "preview": {
      "distribution": "internal",
      "env": { "APP_VARIANT": "preview" },
      "android": { "buildType": "apk" },
      "autoIncrement": true
    },
    "production": { "autoIncrement": true }
  },

  "submit": {
    "production": {}
  }
}

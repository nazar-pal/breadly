{
  "cli": {
    "version": ">= 16.10.0",
    "appVersionSource": "remote"
  },

  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": { "APP_VARIANT": "development" },
      "environment": "development",
      "channel": "development"
    },
    "ios-simulator": {
      "extends": "development",
      "ios": { "simulator": true }
    },
    "preview": {
      "distribution": "internal",
      "env": { "APP_VARIANT": "preview" },
      "environment": "preview",
      "android": { "buildType": "apk" },
      "autoIncrement": true,
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "env": { "APP_VARIANT": "production" },
      "environment": "production",
      "channel": "production"
    }
  },

  "submit": {
    "production": {}
  }
}
